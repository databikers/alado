{
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2022",
    "declaration": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@alado": ["src/alado-server"],
      "@const": ["src/constants"],
      "@decorator": ["src/decorators"],
      "@dto": ["src/dto"],
      "@injector": ["src/injector"],
      "@helper": ["src/helpers"],
      "@options": ["src/options"],
      "@parameters": ["src/parameters"],
      "@request-processor": ["src/request-processor"],
      "@router": ["src/router"],
      "@server": ["src/server"],
      "@factory": ["src/factory"]
    }
  },
  "include": ["src/**/*"]
}
